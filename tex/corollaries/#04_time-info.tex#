% 04_time-info.tex — Time–information complementarity
% ======================================================================

\subsection{Time–information complementarity}
\label{corollary:time-info}

\paragraph{Setup.}
Let \(A\subset\partial U\) be a boundary patch observed over a \window \([t,t+\Delta t]\) (\S\ref{axioms:window}).
With the directional split (\S\ref{axioms:directional-split}), the inward, window‑averaged counting rate is
\begin{equation}
\overline{J}_{A}
\;:=\;
\frac{1}{\Delta t}\int_{t}^{t+\Delta t}\!\!\int_{A}\big(\mathbf j\!\cdot\!\mathbf n\big)_{-}\,\mathrm dA\,\mathrm dt
\qquad\text{(nats/time)}.
\label{corollary:time-info:eq:JA}
\end{equation}
Let \(C_{\rm chan}^{(\cdot)}(\varepsilon)\) denote the \(\varepsilon\)‑reliable channel capacity (units indicated),
\(T\) the boundary temperature, and \(P\) the available erasure power.

\paragraph{Bounds (nats).}
From the operational limits in \S\ref{operationalization:limits},
\begin{equation}
\frac{\Delta I_{\rm nats}}{\Delta t}
\;\le\;
\min\!\Big\{\,\overline{J}_{A},\ C_{\rm chan}^{(\mathrm{nats})}(\varepsilon),\ P/T\,\Big\}.
\label{corollary:time-info:eq:rate-nats}
\end{equation}

\paragraph{Bounds (trits).}
With the trit/nat conversion used in \S\ref{operationalization:units},
\begin{equation}
\frac{\Delta I_{\rm trits}}{\Delta t}
\;\le\;
\min\!\Big\{\,\frac{\overline{J}_{A}}{\ln 3},\ C_{\rm chan}^{(\mathrm{trits})}(\varepsilon),\ \frac{P}{T\,\ln 3}\,\Big\},
\label{corollary:time-info:eq:rate-trits}
\end{equation}
\begin{equation}
\Delta t
\;\ge\;
\max\!\Big\{\,\frac{\Delta I_{\rm trits}}{\overline{J}_{A}/\ln 3},\ \frac{\Delta I_{\rm trits}}{C_{\rm chan}^{(\mathrm{trits})}(\varepsilon)},\ \frac{\Delta I_{\rm trits}\,\ln 3\,T}{P}\,\Big\}.
\label{corollary:time-info:eq:time-trits}
\end{equation}

\paragraph{Specialization (one reliable trit).}
For \(\Delta I_{\rm trits}=1\),
\begin{equation}
\Delta t
\;\ge\;
\max\!\Big\{\,(\overline{J}_{A}/\ln 3)^{-1},\ \ C_{\rm chan}^{(\mathrm{trits})}(\varepsilon)^{-1},\ \ (\ln 3)\,T/P\,\Big\}.
\label{corollary:time-info:eq:one-trit}
\end{equation}

\paragraph{Erasures/unknowns (resolved content).}
If a fraction \(\varepsilon_{\bot}\in[0,1)\) of observed symbols on the same window are erasures \((\bot)\),
the resolved‑content bounds follow from the substitutions
\begin{equation}
\overline{J}_{A}\ \mapsto\ (1-\varepsilon_{\bot})\,\overline{J}_{A},
\qquad
C_{\rm chan}^{(\cdot)}\ \mapsto\ (1-\varepsilon_{\bot})\,C_{\rm chan}^{(\cdot)},
\label{corollary:time-info:eq:erasure-subst}
\end{equation}
applied to \eqref{corollary:time-info:eq:rate-nats}–\eqref{corollary:time-info:eq:time-trits}.

\paragraph{Capacity as a functional.}
The \(\varepsilon\)‑reliable capacity (trits/time) is an abstract functional of controls, noise, and budgets,
\[
C_{\rm chan}^{(\mathrm{trits})}(\varepsilon)
\;=\;
\mathcal C\big[R^{(a)};\,\mathcal N,\,\mathcal B;\,\varepsilon\big],
\]
where \(R^{(a)}\) are boundary/control parameters, \(\mathcal N\) a noise kernel, and
\(\mathcal B\) resource budgets (e.g., \(P,T,A,\Delta t\)).

\medskip
\noindent\emph{Literature note.}
Reliable communication and capacity: Shannon~\cite{Shannon1948}, Gallager~\cite{Gallager1968}.
Erasure cost and reversibility: Landauer~\cite{Landauer1961}, Bennett~\cite{Bennett2003}.
